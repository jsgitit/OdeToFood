@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}
<head>
    <script src="https://kit.fontawesome.com/7f5e11353c.js" crossorigin="anonymous"></script>
</head>
<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control-lg"
                   asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="fas fa-search fa-2x fa-align-right"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a class="btn"
                   asp-page="./Detail"
                   asp-route-restaurantId="@restaurant.Id">
                    <i class="fas fa-search-plus"></i>
                </a>
                <a class="btn"
                   asp-page="./Edit"
                   asp-route-restaurantId="@restaurant.Id">
                    <i class="fas fa-edit"></i>
                </a>
            </td>

        </tr>
    }
</table>
<a asp-page="./Edit" class="btn btn-primary">Add New</a>
@section footer {
    <div>@Model.Message</div>
}
